doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet')
    title Login - Your Travel Blog
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header Login
            .card-body
              form
                .form-group
                  label(for='username') Username
                  input#username.form-control(type='text' name='username' required='')
                .form-group
                  label(for='password') Password
                  input#password.form-control(type='password' name='password' required='')
                button.btn.btn-primary.btn-block(type='submit') Login
    script(src='https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js')
