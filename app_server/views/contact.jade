doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet')
    title Contact - Your Travel Blog
  body
    
    .container.mt-5
      .row
        .col-md-6.offset-md-3
          h2.text-center.mb-4 Contact Us
          form
            .form-group
              label(for='name') Your Name
              input#name.form-control(type='text' placeholder='Enter your name')
            .form-group
              label(for='email') Email address
              input#email.form-control(type='email' placeholder='Enter your email')
            .form-group
              label(for='message') Message
              textarea#message.form-control(rows='5' placeholder='Enter your message')
            button.btn.btn-primary(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js')
